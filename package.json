{
  "name": "mometa",
  "version": "1.0.0",
  "description": "面向研发的代码DSL平台",
  "author": "余聪 <yucong@yuanfudao.com>",
  "scripts": {
    "test": "npx jest",
    "test:watch": "npm test -- --watch",
    "preversion": "npm test",
    "postpublish": "git push --tag origin $(git rev-parse --abbrev-ref HEAD)",
    "new": "npx edam",
    "bootstrap": "npx lerna bootstrap",
    "release": "npx lerna publish --conventional-commits -m 'chore(release): publish'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lerna toc && git add README.md && pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "files": [
    "es",
    "types",
    "lib"
  ],
  "keywords": [
    "余聪",
    "mometa",
    "mometa"
  ],
  "main": "lib",
  "types": "types",
  "license": "MIT",
  "repository": "余聪/mometa",
  "module": "es",
  "edam": {
    "source": "pkg",
    "alias": {
      "pkg": {
        "url": "./packages/__template",
        "type": "file",
        "config": {
          "output": "./packages/"
        }
      }
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__test{s,}__/*.(spec|test).{t,j}s{x,}"
    ]
  },
  "packagePrefix": "@mometa/",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.3",
    "change-case": "^4.1.2",
    "commander": "^8.3.0",
    "concurrently": "^6.4.0",
    "edam-cli": "^3.4.15",
    "human-format": "^0.11.0",
    "husky": "^4.3.8",
    "jest": "^27.3.1",
    "lerna-cli": "^5.0.1",
    "lerna-command-toc": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
